<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vk.behaviour.mapper.ApLikesBehaviorMapper">

    <select id="selectUserLikes" resultType="com.vk.behaviour.domain.ApLikesBehavior">
        SELECT article_id as articleId
             , operation
        FROM ap_likes_behavior
        WHERE author_id = #{userId}
        AND article_id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        AND type = 0;
    </select>

    <select id="selectUserCommentLikes" resultType="com.vk.behaviour.domain.ApLikesBehavior">
        SELECT comment_id as commentId
             , operation
        FROM ap_likes_behavior
        WHERE author_id = #{userId}
        <if test="artId != null and artId != ''">
            AND article_id = #{artId}
        </if>
        <if test="ids != null and ids.size() > 0">
            AND comment_id IN
            <foreach collection="ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
        AND type = 1;
    </select>
</mapper>
